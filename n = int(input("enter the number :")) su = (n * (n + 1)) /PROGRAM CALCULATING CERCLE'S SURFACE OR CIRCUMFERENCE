import math

ab = int (input("Calculate Surface of Circumference ; If Surface input 1 if Circumference input 2 :"))
if ab == 1 :
    d = float(input())      #input the diameter of the circle
    r = d / 2
    a = r * r * math.pi
    print (round (a, 2))
elif ab == 2 :
    d = float(input())      #input the diameter of the circle
    a = d * math.pi
    print(round(a, 2))
else :
    print ("ERROR")
    
